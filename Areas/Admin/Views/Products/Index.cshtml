@model IEnumerable<TKPM.Models.Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="card card-custom p-3">
    <h3 class="mb-3">Danh sách sản phẩm</h3>

    <!-- Nút thêm sản phẩm -->
    <a asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("N0") VNĐ</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
