@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Bảng điều khiển";
}

<div class="row">
    <div class="col-md-4">
        <div class="card text-bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm</h5>
                <p class="card-text">Quản lý danh sách sản phẩm.</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light">Xem chi tiết</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Đơn hàng</h5>
                <p class="card-text">Quản lý các đơn hàng của khách.</p>
                <a asp-controller="Order" asp-action="Index" class="btn btn-light">Xem chi tiết</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Tài khoản</h5>
                <p class="card-text">Quản lý thông tin tài khoản người dùng.</p>
                <a asp-controller="Account" asp-action="Manage" class="btn btn-light">Xem chi tiết</a>
            </div>
        </div>
    </div>
</div>
